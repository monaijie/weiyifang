

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>登入</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/componentes/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="/componentes/stylesheets/style.css" media="all">
    <link rel="stylesheet" href="/componentes/stylesheets/login.css" media="all">
    <script src="/componentes/layui/layui.js"></script>
    <script src="/componentes/javascripts/jquery.min.js"></script>
    <script src="/componentes/javascripts/matrix.js"></script>
</head>
<body>

<div class="layadmin-user-login layadmin-user-display-show" id="LAY-user-login" style="background-color: #2E363F;">

    <div class="layadmin-user-login-main" style="margin-top: 40px;color: #fff;">
        <div class="layadmin-user-login-box layadmin-user-login-header">
            <h2 style="color: #fff;">后台管理系统</h2>
        </div>
        <div class="layadmin-user-login-box layadmin-user-login-body layui-form">
            <div class="layui-form-item" style="width: 100%;">
                <label class="layadmin-user-login-icon layui-icon layui-icon-username" for="LAY-user-login-username" style="background-color: #28b778;border-color: #28b778;"></label>
                <input type="text" name="username" id="LAY-user-login-username" lay-verify="required" placeholder="用户名" class="layui-input" style="padding-left: 50px;">
            </div>
            <div class="layui-form-item"  style="width: 100%;">
                <label class="layadmin-user-login-icon layui-icon layui-icon-password" for="LAY-user-login-password" style="background-color: #ffb848;"></label>
                <input type="password" name="password" id="LAY-user-login-password" lay-verify="required" placeholder="密码" class="layui-input" style="padding-left: 50px;">
            </div>
            <div class="layui-form-item"  style="width: 100%;">
                <button class="layui-btn layui-btn-fluid" lay-submit lay-filter="LAY-user-login-submit" style="font-size: 18px;">登 入</button>
            </div>
        </div>
    </div>

</div>

<script>
    layui.config({
        base: '/componentes/' //静态资源所在路径
    }).extend({
        index: 'lib/index' //主入口模块
    }).use(['index', 'user'], function(){
        var $ = layui.$
            ,setter = layui.setter
            ,admin = layui.admin
            ,form = layui.form
            ,router = layui.router()
            ,search = router.search;

        form.render();

        //提交
        form.on('submit(LAY-user-login-submit)', function(obj){
           location.href = '/admin/'
        });
    });
</script>
</body>
</html>